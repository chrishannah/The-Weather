<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.chrishannah.theweather.fragments.Current">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@android:style/Widget.Holo.ScrollView"
        android:backgroundTint="?attr/colorButtonNormal"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_margin="2dp"
                app:contentPadding="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Location: PLACE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/locationView"
                        android:textSize="12sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Time Updated: TIME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/timeView"
                        android:textSize="12sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="16dp"
                app:contentPadding="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/summary"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:text="Summary"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:text="Temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/temperature"
                        android:textSize="52sp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:text="Apparent Temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/apparentTemperature"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_margin="2dp"
                android:id="@+id/extrasCard"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:clipChildren="false"
                app:contentPadding="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/extrasVerticalLayout">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
